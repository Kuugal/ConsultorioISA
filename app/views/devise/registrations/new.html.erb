<div class="row justify-content-center " style="height: 81.5vh;">
<div class="col-md-3 align-self-center ">
<h2 class="display-4">RegÃ­strate</h2>
<br>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

<div class="form-group">
    <%= f.label :nombre %><br />
    <%= f.text_field :name, class:"form-control", autofocus: true %>
    
  </div>

  <div class="form-group">
    <%= f.label :email %><br />
    <%= f.email_field :email, autocomplete: "email@dominio", class:"form-control" %>
    <small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone else.</small>
  </div>

  <div class="form-group">
    <%= f.label :password %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password", class:"form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password", class:"form-control" %>
  </div>

<div class="row">
  <div class="actions col-3">
    <%= f.submit "Sign up", class:"btn btn-primary" %>
  </div>

<% end %>
<div class="col-3 offset-6">
<%= render "devise/shared/links", class:"btn btn-primary" %>
</div>
  </div>
</div>
</div>